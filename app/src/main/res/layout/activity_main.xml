<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <AutoCompleteTextView
            android:text="A"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/cityAutoCompleteTextViewSource"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:autofillHints="Enter source city"
            android:layout_marginTop="40dp"
            android:completionThreshold="3"
            android:dropDownWidth="100dp" android:layout_marginEnd="148dp"/>
    <TextView
            android:id="@+id/pickTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick time"
            tools:text="Pick Time"
            app:layout_constraintTop_toBottomOf="@+id/cityAutoCompleteTextViewSource"
            app:layout_constraintStart_toStartOf="@+id/cityAutoCompleteTextViewSource"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"/>
    <TextView
            android:text="Select source city"
            android:layout_width="157dp"
            android:layout_height="20dp"
            android:id="@+id/sourceCityAutocompleteLabel"
            android:labelFor="@id/cityAutoCompleteTextViewSource"
            app:layout_constraintTop_toTopOf="@+id/cityAutoCompleteTextViewSource"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.29"
            app:layout_constraintEnd_toStartOf="@+id/cityAutoCompleteTextViewDest"/>
    <TextView
            android:id="@+id/sourceTimeZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text=""
            app:layout_constraintTop_toBottomOf="@+id/cityAutoCompleteTextViewSource"
            app:layout_constraintStart_toStartOf="@+id/cityAutoCompleteTextViewSource"
            android:layout_marginStart="8dp"/>

    <AutoCompleteTextView
            android:text="B"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/cityAutoCompleteTextViewDest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:autofillHints="Enter destination city"
            android:layout_marginTop="160dp"
            android:completionThreshold="3"
            android:dropDownWidth="100dp" android:layout_marginEnd="140dp"/>
    <TextView
            android:text="Select dest city"
            android:layout_width="138dp"
            android:layout_height="23dp"
            android:id="@+id/destCityAutocompleteLabel"
            android:labelFor="@id/cityAutoCompleteTextViewSource"
            app:layout_constraintTop_toTopOf="@+id/cityAutoCompleteTextViewDest"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintEnd_toStartOf="@+id/cityAutoCompleteTextViewSource"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.324"
            android:layout_marginTop="4dp"/>
    <TextView
            android:id="@+id/destTimeZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text=""
            app:layout_constraintTop_toBottomOf="@+id/cityAutoCompleteTextViewDest"
            app:layout_constraintStart_toStartOf="@+id/cityAutoCompleteTextViewDest"
            android:layout_marginStart="8dp"/>

    <Button
            android:text="Convert"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cityAutoCompleteTextViewDest"
            app:layout_constraintStart_toStartOf="@+id/cityAutoCompleteTextViewDest"
            android:layout_height="wrap_content" android:id="@+id/convertTime"
            android:layout_marginTop="64dp" android:layout_marginStart="8dp"/>
    <TextView
            android:id="@+id/convertedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Converted"
            app:layout_constraintTop_toBottomOf="@+id/convertTime"
            app:layout_constraintStart_toStartOf="@+id/convertTime"
            android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>